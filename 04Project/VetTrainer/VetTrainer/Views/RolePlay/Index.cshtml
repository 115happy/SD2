@model VetTrainer.Views.ViewModel.RolesViewModel
@{
    ViewBag.Title = "角色扮演";
}

<h2>Index</h2>
@{
    for (int i = 0; i < Model.Roles.Count; i++)
    {
        string Name = Model.Roles[i].Name;
        <button>@Html.ActionLink(Name, "ClinicSelect", "RolePlay", new {roleId = Model.Roles[i].Id}, null)</button>
    }
}
