@using VetTrainer.Views
@Scripts.Render("~/bundles/msgboxfeedback")
@*<script src="~/Src/js/-message-box.js"></script>*@

<!-- Modal -->
<div class="modal fade" id="msgModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Strings.FeedbackMessageBox.Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="msgModalContent"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@Strings.FeedbackMessageBox.BtnOK</button>
            </div>
        </div>
    </div>
</div>
